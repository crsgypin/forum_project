<%= render :partial => "side_bar/category", :locals =>{:path=>"post"}%>


<div class="content-center">

  <div class="devise-box">

    <h2>Sign up</h2>

    <% resource.build_user_profile unless resource.user_profile %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <div>
          <%= f.label :password %><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <%= f.fields_for :user_profile do |u| %>
        <div class="field">
          <%= u.label :first_name %>
          <%= u.text_field :first_name %>
        </div>

        <div class="field">
          <%= u.label :last_name %>
          <%= u.text_field :last_name %>
        </div>

        <div class="field">
          <%= u.label :english_name %>
          <%= u.text_field :english_name %>
        </div>

        <div class="field">
          <%= f.label :friendly_id, "URL" %>
          <%= f.email_field :friendly_id %>
        </div>

        <div class="field">
          <%= u.label :intro %>
          <%= u.text_area :intro %>
        </div>

      <% end %>

      <div class="actions">
        <%= f.submit "Sign up", :class=>"btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>

   
    <% end %>



</div>
</div>
