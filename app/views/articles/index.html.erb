

<div class="row article-title">
	<div class="col-md-6">
		<%= link_to "Post Article", new_article_path %>

	</div>
</div><!--article-title -->
<div class="row article-content">
	<div class="col-md-12">
		
		<table class="table table-hover">
			<tr class="">
				<th class="article-content-table-index text-center"></th>
				<th class="article-content-table-topic text-center">Topic</th>
				<th class="article-content-table-post-user text-center">Post User</th>
				<th class="article-content-table-post-date text-center">Post Date</th>
				<th class="article-content-table-comment text-center">Comments</th>
				<th class="article-content-table-views text-center">views</th>
			</tr>
				<% @active_articles.each_with_index do |a, index| %>
			<tr>
				<td><%= @page*@per+index+1 %></td>
				<td><%= link_to a.title, article_path(a) %></td>
				<td class="text-center"><%= link_to a.user.username, user_path(a.user) %></td>
				<% date = a.updated_at %>
				<td class="text-center"><%= "#{date.year}/#{date.month}/#{date.day} #{date.hour}:#{date.min}:#{date.sec}" %></td>
				<td class="text-center"><%= a.comments.count%></td>
				<td class="text-center"><%= a.article_views.count%></td>				
			</tr>

				<% end %><!-- @ative_artices.each -->
		</table>
	</div><!-- col-md-12 -->
</div><!-- row article-content -->
<div class="row"><div class="col-md-12"><%= paginate @active_articles %></div></div>

