

<div class="row category-title">
	<div class="col-md-6">


	</div>
</div><!--category-title -->
<div class="row category-content">
	<div class="col-md-12">
		
		<table class="table table-hover">
			<tr>
				<th class="category-content-table-index"></th>
				<th class="category-content-table-topic">Topic</th>
				<th class="category-content-table-post">Post</th>
				<th class="category-content-table-reply">Replies</th>
				<th class="category-content-table-view">Views</th>
				<th class="category-content-table-activity">Activity</th>
			</tr>
				<% @active_articles.each_with_index do |a, index| %>
			<tr>
				<td><%= index+1 %></td>
				<td><%= link_to a.title, "#" %></td>
				<td><%= link_to a.user.username %></td>
				<td>replies</td>
				<td>views</td>				
				<td>activities</td>				
			</tr>

			<% end %>
		</table>
	</div><!-- col-md-12 -->
</div><!-- category-content -->


