<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="nav-box">
	<div class="nav-top">
		<div class="home">
			<p><%= link_to "",articles_path, :class=>"glyphicon glyphicon-home" %></p>
		</div>

		<div class="about">
			<p><%= link_to "About", about_articles_path %></p>
		</div>

		<div class="message">
			<h4  class="notice">abc<%=flash[:notice]%></h4>
			<p><%if @article %>
				<%=@article.errors.full_messages.inspect %></p>
	      <%# @person.errors.full_messages.each do |message| %>
				<% end %>				
		</div>

		<div class="user">
			<% if current_user %>
				<%= link_to current_user.username, user_path(current_user), :class=>"glyphicon glyphicon-user" %>
			<% end %>			
		</div>

		<div class="login">
			<% if current_user %>
			  <%= link_to('logout', destroy_user_session_path, :method => :delete, :class=>"btn btn-info") %>
			  <%= link_to('Edit', edit_user_registration_path, :class=>"btn btn-info")%>
			<% else %>
				<%= link_to "login", new_session_path(:user),:class=>"glyphicon glyphicon-user" %>
			<% end %>
		</div>

	</div><!--nav top-->
</div>

<div class="content-body">
		<div class="content-left">
			<ul>
				<%= @active_category_id ==0 ? "<li class='content-left-hightlighted'>".html_safe : "<li>".html_safe%> 
					<%= link_to "All", articles_path %>
				</li>
				<%  @categories.each_with_index do |c,index| %>

					<%= @active_category_id ==index+1 ? "<li class='content-left-hightlighted'>".html_safe : "<li>".html_safe%> 
					<%= link_to c.name, articles_path(:category_id=>index+1) %>
				</li>
				<% end %>
			</ul>
		</div><!--nav-category -->


		<div class="content-middle">
			<div class="container">
			<%= yield %>
			</div><!-- container -->
		</div><!-- content right -->
</div><!-- content-body -->

</body>
</html>
